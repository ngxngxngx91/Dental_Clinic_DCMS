<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <welcome-file-list>
        <welcome-file>home1.jsp</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>ViewPatientList</servlet-name>
        <servlet-class>controller.patient.PatientList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewApprovedAppointmentList</servlet-name>
        <servlet-class>controller.appointment.ApprovedAppointmentList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPatientAppointmentList</servlet-name>
        <servlet-class>controller.appointment.PatientAppointmentList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAppointmentStatus</servlet-name>
        <servlet-class>controller.appointment.UpdateAppointmentStatus</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SendConfirmationEmail</servlet-name>
        <servlet-class>Service.Email.SendConfirmationEmailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewValidatedAppointmentList</servlet-name>
        <servlet-class>controller.appointment.ValidatedAppointmentList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ajaxServlet</servlet-name>
        <servlet-class>com.vnpay.common.ajaxServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Config</servlet-name>
        <servlet-class>com.vnpay.common.Config</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vnpayQuery</servlet-name>
        <servlet-class>com.vnpay.common.vnpayQuery</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>vnpayRefund</servlet-name>
        <servlet-class>com.vnpay.common.vnpayRefund</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewPatientList</servlet-name>
        <url-pattern>/viewpatientlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewApprovedAppointmentList</servlet-name>
        <url-pattern>/viewApprovedAppointmentList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPatientAppointmentList</servlet-name>
        <url-pattern>/viewPatientAppointmentList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateAppointmentStatus</servlet-name>
        <url-pattern>/updateAppointmentStatus</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SendConfirmationEmail</servlet-name>
        <url-pattern>/sendconfirmationemail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewValidatedAppointmentList</servlet-name>
        <url-pattern>/viewValidatedAppointmentList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ajaxServlet</servlet-name>
        <url-pattern>/vnpayajax/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Config</servlet-name>
        <url-pattern>/vnpayconfig/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vnpayQuery</servlet-name>
        <url-pattern>/vnpayquery/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>vnpayRefund</servlet-name>
        <url-pattern>/vnpayrefund/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>   
    </session-config>
</web-app>